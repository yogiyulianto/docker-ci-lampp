<%- include ../components/main %>

    <div class="page-content hide-content" id="main-content">
        <!-- [ Main Content ] start -->
        <section class="pcoded-main-container">
            <div class="pcoded-content">
                <!-- [ breadcrumb ] start -->
                <div class="page-header">
                    <div class="page-block">
                        <div class="row align-items-center">
                            <div class="col-md-12">
                                <div class="page-header-title">
                                    <h5 class="m-b-10"><%= title %> </h5>
                                </div>
                                <ul class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#!"><i
                                                class="feather icon-save"></i></a></li>
                                    <li class="breadcrumb-item"><a href="#!">Master Data</a></li>
                                    <li class="breadcrumb-item"><a href="#!"><%= title %></a></li>
                                    <li class="breadcrumb-item"><a href="#!">Tambah Data</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- [ breadcrumb ] end -->
                <!-- [ Main Content ] start -->
                <div class="row">
                    <!-- [ Hover-table ] start -->
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="row col-lg-12">
                                    <div class="col-lg-11">
                                        <h5>Data <%= title %> </h5>
                                        <span class="d-block m-t-5"><%= subtitle %> </span>
                                    </div>
                                    <div class="col-lg-1 text-left">
                                        <a href="user" onclick="addData()" class="btn btn-outline-secondary"><i class="feather mr-2 icon-chevron-left"></i>Kembali</a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body table-border-style">
                                <% if (st=='Sukses' ) { %>
                                    <div class="alert alert-success" role="alert" style="margin-top: 2%;">
                                        <b>Sukses</b>
                                        <%= notif %>
                                    </div>
                                    <h2></h2>
                                <% }else if (st=='Gagal' ) { %>
                                    <div class="alert alert-danger" role="alert" style="margin-top: 2%;">
                                        <b>Gagal</b>
                                        <%= notif %>
                                    </div>
                                <% } %>
                                <form action="add_admin" class="mt-3" method="POST">
                                    <fieldset>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group row">
                                                    <label for="" class="col-lg-3 col-form-label">Nama Lengkap <span class="text-danger">*</span> </label>
                                                    <div class="col-lg-8">
                                                        <input id="nama" name="nama_lengkap" required type="text" class="form-control" placeholder="Isi nama...">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label for="" class="col-lg-3 col-form-label">Tempat Lahir <span class="text-danger">*</span></label>
                                                    <div class="col-lg-8">
                                                        <input id="tempat_lahir" name="tempat_lahir" required type="text" class="form-control" placeholder="Isi tempat lahir...">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label for="" class="col-lg-3 col-form-label">Alamat<span class="text-danger">*</span></label>
                                                    <div class="col-lg-8">
                                                        <textarea name="alamat" id="" cols="30" rows="5" class="form-control" placeholder="Isi alamat..."></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group row">
                                                    <label for="" class="col-lg-3 col-form-label">Email<span class="text-danger">*</span></label>
                                                    <div class="col-lg-8">
                                                        <input id="input-email" required class="form-control input-mask" name="email" placeholder="Isi nama...">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label for="" class="col-lg-3 col-form-label">Tanggal Lahir<span class="text-danger">*</span></label>
                                                    <div class="col-lg-8">
                                                        <input id="tanggal_lahir" name="tanggal_lahir" required type="date" class="form-control">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label for="" class="col-lg-3 col-form-label">Password<span class="text-danger">*</span></label>
                                                    <div class="input-group col-lg-8">
                                                        <input type="password" class="form-control" required id="pass" name="user_pass" placeholder="Masukan password" aria-label="Recipient's username" aria-describedby="basic-addon2">
                                                        <div class="input-group-append">
                                                            <button class="btn btn-outline-secondary" type="button" onclick="showPass()"> <i class="fas fa-eye"></i></button>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label for="" class="col-lg-3 col-form-label">Status Aktif<span class="text-danger">*</span></label>
                                                    <div class="col-lg-8">
                                                        <select class="form-control select2" name="user_st">
                                                            <option value="1">Aktif</option>
                                                            <option value="0">Non Aktif</option>
                                                            <option value="2">Blok</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </fieldset>
                                    <div class="mt-5">
                                        <hr>
                                        <div class="text-right">
                                            <button type="reset" class="btn btn-outline-dark waves-effect waves-light mr-2">
                                                <i class="fas fa-recycle mr-1"></i> Reset
                                            </button>
                                            <button type="submit" class="btn btn-success waves-effect waves-light">
                                                <i class="fas fa-check mr-1"></i> Simpan
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- [ Hover-table ] end -->
                </div>
                <!-- [ Main Content ] end -->
            </div>
        </section>
    </div>
    <script>
        jQuery(document).ready(function ($) {
            $('.hide-content').hide();
        });

        tabsControl('data');
        function tabsControl(x, y, z, xz) {
            if (x == "data") {
                var data = document.getElementById("main-content").innerHTML
                $(".hide-content").removeClass('hide');
                $("#page-content").html(data);
            }
        }
        function showPass() {
        var x = document.getElementById("pass");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>