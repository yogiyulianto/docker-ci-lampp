<%- include components/main %>

<div class="page-content hide-content" id="main-content">
    <div class="card">
        <div class="row align-items-center text-center">
            <div class="col-md-12">
                <div class="card-body">
                    <img src="/doc/logo/icon-app.svg" alt="" class="img-fluid mb-4" width="130px">
                    <h4 class="mb-3 f-w-400">Lupa Password</h4>
                    <h6 class="mb-3 f-w-400 text-mute">Password akan dikirimkan kedalam email dibawah</h6>
                    <% if (st=='Sukses' ) { %>
                        <div class="alert alert-success" role="alert" style="margin-top: 2%;">
                            <b>Sukses</b>
                            <%= notif %>
                        </div>
                        <h2></h2>
                    <% }else if (st=='Gagal' ) { %>
                        <div class="alert alert-danger" role="alert" style="margin-top: 2%;">
                            <b>Gagal</b>
                            <%= notif %>
                        </div>
                    <% } %>
                    <div class="form-group mb-3">
                        <label class="floating-label" for="Email">Email</label>
                        <input type="text" class="form-control" id="Email" placeholder="">
                    </div>
                    <button class="btn btn-block btn-primary">Kirim</button>
                    <a href="/login" class="btn btn-outline-secondary btn-block waves-effect waves-light">Kembali</a>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include /components/footer %>
<script>
    jQuery(document).ready(function ($) {
            $('.hide-content').hide();
        });

        tabsControl('data');
        function tabsControl(x, y, z, xz) {
            if (x == "data") {
                var data = document.getElementById("main-content").innerHTML
                $(".hide-content").removeClass('hide');
                $("#page-content").html(data);
            }
        }
</script>